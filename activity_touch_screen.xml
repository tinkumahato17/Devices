<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8FE792"
    android:layout_height="match_parent"
    tools:context=".touch_screenActivity">



    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="50sp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Touch Screen:-"
                android:textColor="#F44336"
                android:textSize="30dp"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="387dp"
                android:padding="0sp"
                android:text="A touch screen is a computer display screen that is also an input and output device. The screens are sensitive to pressure; a user interacts with the computer by touching pictures or words on the screen."
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/touchscreen"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>