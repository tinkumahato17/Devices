<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ABD582"
    android:layout_height="match_parent"
    tools:context=".joystickActivity">

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="50sp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joystick:-"
                android:textColor="#F44336"
                android:textSize="30dp"
                android:padding="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="387dp"
                android:padding="0sp"
                android:text="A joystick is an input device consisting of a stick that pivots on a base and reports its angle ar direction to the device it is controlling . Joysticks are often used to control video games, and useally have one or more push-buttons whose state can also be read by the computer."
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/joystick"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>