<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#897609"
    android:orientation="vertical"
    android:padding="56dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_networking_devices"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:layout_centerInParent="true"
        android:background="#FF9800"
        android:text="networking Devices"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_input_devices"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:layout_above="@id/btn_networking_devices"
        android:layout_centerVertical="true"
        android:layout_marginBottom="84dp"
        android:layout_centerInParent="true"
        android:background="#FF9800"
        android:text="Input Devices"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_output_devices"
        android:layout_width="200sp"
        android:layout_height="70sp"
        android:layout_below="@id/btn_networking_devices"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="91dp"
        android:background="#FF9800"
        android:text="Output Devices"
        android:textSize="20sp" />

</RelativeLayout>