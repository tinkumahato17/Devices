<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#9CFFE607"
    android:layout_height="match_parent"
    tools:context=".audio_speakers_Activity">

    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="50sp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Speakers:-"
                android:textColor="#F44336"
                android:textSize="30dp"
                android:padding="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="387dp"
                android:padding="0sp"
                android:text="Speakers are popular output devices used with computer systems. They receive audio input from the computer's sound card and produce audio output in the form of sound waves.
"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/speaker"/>




        </LinearLayout>
    </ScrollView>

</RelativeLayout>